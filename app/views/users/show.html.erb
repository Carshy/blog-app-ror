<h1><%= @user.name %>'s Post</h1>
<div>
  <div>
    <img src="<%= @user.photo %>" alt="image"/>
    <h2><%= @user.name %></h2>
    <p><span>Number of Posts</span><%= @user.posts_counter || 0 %></p>
  </div>

  <div>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>

  <%= link_to "Add New Post", "/users/#{@user.id}/posts/new" %>


  <div>
    <div>
      <% @user.recent_posts.each do |post| %>
        <%= link_to user_post_path(@user, id: post.id) do %>
        <p>Post #<%=post.id %></p>
        <p><%=post.text %></p>
        <p>
          <span>
          Comments: <%= post.comments_counter || 0 %>,
          Likes: <%= post.likes_counter || 0 %>
        </span>
        </p>
        <% end %>
      <% end %>
    </div>
  </div>

  <button>
    <%= link_to "See All Posts", user_posts_path(@user) %>
  </button>
</div>